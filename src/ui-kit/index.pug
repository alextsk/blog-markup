doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        link(rel="stylesheet", href="styles.css")
        title Document
        - var lorem="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros.";
        - var lorem1="Lorem ipsum dolor sit amet, consectetur adipiscing elit.";
        
        include components.pug
        

    body
        .wrapper
            .wrapper__buttons
                include buttons-section/buttons-section.pug
            .wrapper__arrows
                include arrows-section/arrows-section.pug
            .wrapper__piecharts 
                include piecharts-section/piecharts-section.pug
            section.sliders-section
                h1.sliders-section__header.section-header Sliders
                .sliders-section__body
                    div.sliders-section__element-container
                        +slider(200, {color: 1})   
                    div.sliders-section__element-container
                        +slider(100, {parts: 11, color: 2})

            section.stages-section
                h1.stages-section__header.section-header Stages
                .stages-section__body
                    div.stages-section__element-container
                        +stage(3, 5)
                    div.stages-section__element-container
                        +stage(4, 10)
            
            section.form-elements-section
                h1.form-elements-section__header.section-header Form elements
                form.form-elements-section__form.form
                    div.form__input-container
                        +input()
                    div.form__input-container
                        +input('success')
                    div.form__input-container
                        +input('error')
                    div.form__input-container
                        +textarea()

                div.form-elements-section__subsection
                    h1.section-header.section-header--small toggles
                    .form-elements-section__subsection-body
                        +toggle(true)
                        +toggle(false)
                div.form-elements-section__subsection
                    h1.section-header.section-header--small tickboxes
                    .form-elements-section__subsection-body
                        +tickbox(true)
                        +tickbox(false)
            section.dropdown-section
                h1.section-header dropdowns/search
                div.dropdown-section__element-container
                    +search()
                div.dropdown-section__element-container
                    +search('failed')
                div.dropdown-section__element-container
                    +dropdown({items:['This is option 1', 'This is option 2', 'This is option 3', 'This is option 4']})

            section.profile-section

                h1.section-header profiles
                div.profile-section__element-container
                    +profile({image: "../images/userpic-1.jpg", name: "John Smith", profession: "ux designer"})
                div.profile-section__element-container
                    +profile({image: "../images/userpic-2.jpg", name: "Sarah Brown", profession: "developer"})

            section.news-section
                h1.section-header news & events
                .news-section__body
                    div.news-section__element-container
                        +news({image:"../images/bike.jpg", title: "It's all going downhill", date: "24 august 2013", copy: lorem})
                    div.news-section__element-container
                        +event({image:"../images/city.jpg", title: "this is the title", date:{day:"24", month:"Aug"}, copy: lorem1})
            
            section.location-section
                h1.section-header location
                +location()
            section.calendar-section
                h1.section-header calendar
                +calendar()
            section.messaging-section
                h1.section-header messaging
                +messaging({userpic:"../images/userpic-2.jpg"} )
            section.video-section
                h1.section-header video
                .video-section__body
                    +video({src:"http://clips.vorwaerts-gmbh.de/VfE_html5.mp4", poster:"../images/city.jpg", first:true})
        script(src='./app.js')
        
