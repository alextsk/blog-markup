:root
  --main-color  #e75735
  --support-color  #4eb7a8
  --light-grey  #e5e5e5
  --dark-grey  #747474
  --text-light #9d9d9d
  --text-dark #8d8d8d

@require 'fonts.styl'

img
  max-width 100%
  max-height 100%
  display inline-block

*
  box-sizing border-box
  font-family "Lato"
h1,h2 
  font-size 1em

.wrapper 
  margin 4.25rem auto 0
  max-width 45rem
  &__arrows
    padding-top 2.6875rem
  &__piecharts
    padding-top 2rem
  &__sliders
    padding-top .9375rem
  &__stages
    padding-top 2.6875rem
  &__form-elements
    padding-top 2.5rem
    width 83%
    margin 0 auto
  &__dropdowns
    padding-top 2.5rem
    width 100%
    display inline-block
    vertical-align top
    @media (min-width: mobile-break)
      padding-left 3.82rem
      width 21.85rem
  &__profile
    display block
    margin 0 auto
    padding-top: 3.1rem;
    @media (min-width: mobile-break)
      display inline-block
      padding-left: 2.25rem;
    width: 21.85rem;
  &__news
    padding-top 4.8rem
  &__location
    padding-top 2rem
    margin 0 auto
    @media (min-width: mobile-break)
      width 82%
  &__calendar
    vertical-align top
    padding-top 2.2rem
    display flex 
    justify-content center
    @media (min-width: mobile-break)
      display inline-block
      padding-left 4rem
  &__messaging
    display flex 
    justify-content center
    vertical-align top
    padding-top 2.2rem
    @media (min-width: mobile-break)
      display inline-block
      padding-left 1.6rem
  &__video
    padding-top 1.1rem
    margin 0 auto
    @media (min-width: mobile-break)
      width 82.5%




    