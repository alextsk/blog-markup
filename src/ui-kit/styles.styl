:root
  --main-color  #e75735
  --support-color  #4eb7a8
  --light-grey  #e5e5e5
  --dark-grey  #747474
  --text-light #9d9d9d
  --text-dark #4f4f4f
mobile-break = 480px

@require 'components.styl'

img
  max-width 100%
  max-height 100%
  display inline-block

*
  box-sizing border-box
  font-family "Lato"
h1,h2 
  font-size 1em

  
.wrapper 
  margin 0 auto
  max-width: 800px
  
.section-header
  text-align: center
  margin 40px 0 
  text-transform uppercase
  color #4f4f4f
  width 100%
  
.section-header--small
  margin 20px 0
  
.buttons-section__body
  
  display grid
  @media (min-width: mobile-break)
    grid-template-columns 1fr 1.5fr 1.5fr 1fr
  grid-gap 20px 50px
  place-items  end center
  
.arrows-section__body
  text-align center
  
.piechart-section__body
  display flex
  flex-direction column
  align-items center
  @media (min-width: mobile-break)
    flex-direction row
  justify-content space-between
  
.sliders-section__body
.stages-section__body
  display grid
  grid-gap 20px
  @media (min-width: mobile-break)
    grid-template-columns 1fr 1fr
  
form.elements
  &>div
    margin-bottom 15px

.form-elements-section
  
  @media (min-width: mobile-break)
    display grid
    grid-gap 20px
    grid-template-columns 1fr
    grid-template-columns 1fr 1fr
    grid-template-rows 100px auto

  &__header
    grid-column-end:  span 2
  &__form
    grid-row-end span 2
    & > * 
      margin-bottom 15px
  &__subsection-body
    display flex
    justify-content center
    

  
.dropdown-section
  width 100%
  @media (min-width: mobile-break)
    width calc(50% - 10px)
  display inline-block
  & > div
    margin-bottom 15px

.profile-section
  @media (min-width: mobile-break)
    width calc(50% - 20px)
  margin-left 20px
  display inline-block
  vertical-align top
  &>div 
    display flex
    margin-bottom 27px
    justify-content center

.news-section__body
  display grid
  grid-gap 20px
  justify-content: center;  
  @media (min-width: mobile-break)
    grid-template-columns 288px 288px
  
.location-section
  width 100%
  
.calendar-section
.messaging-section
  display inline-block
  vertical-align top
  @media (min-width: mobile-break)
    width 50%
  > div
    margin 0 auto

.video-section__body
  height 400px
  & > * 
    margin 0 auto
    