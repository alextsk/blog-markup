.buttons-section
  &__header
    margin-bottom 4.25rem
    section-header()
  &__body
    width 68%
    padding-left 14px
    margin 0 auto
    display grid
    row-gap 20px
    place-items  end center
    @media (min-width: mobile-break)
      grid-template-columns repeat(4, min-content)
      grid-row-gap 1.3125rem
      grid-column-gap 1.45rem 