section.form-elements-section
    h1.form-elements-section__header.section-header Form elements
    form.form-elements-section__body
        .form-elements-section__texts
            .form-elements-section__input-container
                +input('error')
            .form-elements-section__input-container
                +input('success')
            .form-elements-section__input-container.form-elements-section__textarea
                +textarea()
            .form-elements-section__input-container.form-elements-section__button
                +button("Submit!")
        .form-elements-section__toggles
            h1.section-header.form-elements-section__header--small toggles
            .form-elements-section__subsection
                .form-elements-section__input-container
                    +toggle(true)
                .form-elements-section__input-container
                    +toggle(false)
        .form-elements-section__ticks
            h1.section-header.form-elements-section__header--small tick boxes
            .form-elements-section__subsection
                .form-elements-section__input-container
                    +tickbox(true)
                .form-elements-section__input-container
                    +tickbox(false)