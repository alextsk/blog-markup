.sliders-section
  padding-top 9px
  
  &__body
    width 81%
    margin 0 auto
    padding-top 1.7rem
    display flex
    flex-direction column
    @media (min-width: mobile-break)
      flex-direction row
      justify-content space-between
  
  &__header
    section-header()
    
  &__element-container
    height 50px 
    @media (min-width: mobile-break)
      width 250px
      height auto