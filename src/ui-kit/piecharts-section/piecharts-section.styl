.piecharts-section
  padding-top 22px
  padding-bottom 6px
  
  &__header
    section-header()
    margin-bottom 20px
    
  &__body
    @media (min-width: mobile-break)
      padding-left 54px
      
  &__element-container
    display flex
    justify-content center
    @media (min-width: mobile-break)
      display inline-block
      &:nth-of-type(2)
        margin-left 12px
      &:nth-of-type(3)
        margin-left 32px
      &:nth-of-type(4)
        margin-left 31px
      &:nth-of-type(5)
        margin-left 24px