.profile
  height 93px
  display flex
  align-items flex-start
  
  &__head
    height 100%
    width: 93px
    display inline-block
    border-radius 50%
    overflow hidden
    border 5px solid var(--light-grey)
    
  &__story
    min-width: 163px
    display inline-block
    text-align center
    padding 10px 30px 16px
    height: 100%
    background-color var(--light-grey)
    border-radius 4px
    position relative
    margin-left 12px
  &__bubble-tail
    position absolute
    top calc(50% - 12px)
    left -9px
    fill var(--light-grey)
  &__name
    font-size 18px
    &:hover
      color var(--main-color)
    
  &__profession
    text-transform uppercase
    font-size 11px
    font-weight 600

  &__social-icons
    height 20px
    margin-top 14px
    display flex
    justify-content space-between
    
.profile__head:hover + .profile__story
  background-color var(--support-color)
  color white
  .profile__bubble-tail
    fill var(--support-color)
  .icon
    fill white
    
.icon
  height 20px
  &:hover
    fill var(--main-color) 
    
   
      
