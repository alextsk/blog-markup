mixin profile({image, name="userpic", profession})
    .profile
        include ./icons.pug
        .profile__head
            img(src=image, alt=name || "userpic")
        .profile__story
            .profile__name=name
            .profile__profession=profession

            .profile__social-icons
                a(href="")
                    svg(viewBox="0 0 22.45 48.31").profile__social-icon
                        use(href="#facebook")
                a(href="") 
                    svg(viewBox="0 0 49.26 40.04").profile__social-icon
                        use(href="#twitter")
                a(href="") 
                    svg(viewBox="0 0 49.44 49.44").profile__social-icon
                        use(href="#dribble")
            .profile__bubble-tail
                svg( transform="rotate(-90)"  width="13px" height="6px")
                    use(href="#bubble-tail" )

