.dropdown
  background-color var(--light-grey)
  border-radius 4px
  position relative
  &__body
    height 28px
    background-color var(--light-grey)
    display flex
    align-items stretch
    overflow hidden
    padding-left 14px
    border-radius 4px
    ^[0]--open &
      border-bottom-right-radius 0

  &__actual
    background-color transparent
    border none
    width 100%
    height 100%
    pointer-events none

  &__button
    width 33px
    height 100%
    cursor pointer
    display flex
    justify-content center
    align-items center 
    background-color var(--support-color)
  &__icon
    height 14px
    width 14px
  &__list
    display none
    position absolute
    width 100%
    z-index 9
    background-color var(--support-color)
    list-style none
    margin 0
    padding 12px
    border-radius 4px 0 4px 4px
    ^[0]--open &
      display block
  &__item
    padding-bottom 16px
    color white
    cursor pointer
    
