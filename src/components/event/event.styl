.event
  height 212px
  width 100%
  display flex
  color white
  &__image
    background-image var(--image-location)
    background-repeat no-repeat
    background-position center top
    width: 32.98%
    height 100%
  &__body
    padding 25px 25px 25px 25px
    background-color var(--support-color)
    height 100%
    flex 1
    display flex
    flex-direction column
    justify-content flex-start
    
  &__title
    text-transform uppercase
    font-size 14px
    margin 15px 0 0
     
  &__date
    color white
    font-family Lato
    font-weight 300
    white-space nowrap
    
  &__day
    font-size 72px
    margin-top: 25px;
    line-height: 0;
    display inline-block
    margin-left -5px
    
  &__month
    font-size 34px
    margin-left 7px
  &__copy
    margin-top 2px
    font-size 11px
    flex 1
  &__button-back
    align-self center
    border-radius 4px

    width 90%
    background-color #ffffff
    .button  
      width 100%
      font-size 10px 
      font-family Lato
      padding-left 10px
      padding-right 10px