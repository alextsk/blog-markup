.input
  display flex
  height 28px
  &--success
    --state-color var(--support-color)
  &--error
    --state-color var(--main-color)
    
.input__back
  background-color var(--light-grey)
  color var(--text-dark)
  padding 0 15px
  flex 1
  color var(--text-dark)
  border-radius 4px
  
.input__actual
  width: 100%
  height 100%
  border none
  background-color transparent
  
.input__message
  min-width 72px
  margin-left 5px
  padding 8px 
  text-align center
  border-radius 4px
  position relative
  background-color var(--state-color)
  text-transform uppercase
  color white
  font-size 10px
  font-family sans-serif
  letter-spacing .5px
  
  &:before
    content ''
    display block
    position absolute
    left -5px
    top 9px
    border-right 5px solid var(--state-color)
    border-top 5px solid transparent
    border-bottom 5px solid transparent
