.news
  height 212px
  width 100%
  display flex
  color white
  &__image
    background-image var(--image-location)
    background-repeat no-repeat
    background-position center top
    width: 32.98%
    height 100%
  &__body
    padding 25px 20px 25px 25px
    height 100%
    flex 1
    background-color var(--main-color)
  &__title
    font-size 28px
    font-weight 400
    margin 0
    line-height 94%
  &__date
    text-transform uppercase
    font-weight 600
    font-size 11px
    margin-top 10px
  &__copy
    margin-top 16px
    font-size 11px
