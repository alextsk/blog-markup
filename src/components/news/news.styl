.news
  height 212px
  width 288px
  display flex
  color white
  &__image
    background-image var(--image-location)
    background-repeat no-repeat
    background-position center top
    width: 95px
    height 100%
  &__body
    padding 25px 20px 25px 25px
    height 100%
    flex 1
    background-color var(--main-color)
  &__title
    font-size 28px
    font-weight 400
    margin 0
    line-height 94%
  &__date
    text-transform uppercase
    font-weight 600
    font-size 11px
    margin-top 10px
  &__copy
    margin-top 16px
    font-size 11px
    
.fade {
  position: relative;
  height: 3.3em; /* exactly three lines */
  overflow hidden
}
.fade:after {
  content: "";
  text-align: right;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 70%;
  height: 1.2em;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), var(--main-color) 50%);
}