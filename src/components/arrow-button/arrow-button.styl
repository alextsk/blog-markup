.arrow-button
  box-sizing border-box
  display inline-block
  user-select none
  width 50px
  height 50px
  border-radius 50%
  line-height 50px
  text-align center
  color #4eb7a8
  cursor not-allowed
  &__circle
    fill grey 
    stroke grey
  &__path
    stroke white
    
  &--left
    transform rotateZ(180deg)
  &--enabled
    cursor pointer
    .arrow-button__circle,
    .arrow-button__path
      stroke #4eb7a8
      fill transparent
    &:hover
      .arrow-button__circle
        stroke #4eb7a8
        fill #4eb7a8
      .arrow-button__path
        stroke white

      
    