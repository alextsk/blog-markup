.button
	box-sizing border-box
	height 32px
	border-radius 2px
	display inline-block
	justify-content center
	align-items center
	background-color #4eb7a8
	box-shadow 0 3px 0 0 #37aa9a
	color white
	line-height: 32px
	padding: 0 32px
	text-transform uppercase
	font-family sans-serif
	transition .2s
	position relative
	top 0
	&:hover	
		top 3px
		box-shadow 0 0px 0 0 #37aa9a
.ripple-container
	opacity .4