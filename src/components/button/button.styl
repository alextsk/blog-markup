
dark-green = #28a290
medium-green = #4eb7a8
text-green = #44ae9f

medium-red = #e75735
dark-red = #bf3e1f
text-red = #e34a26

.button
	--thecolor : medium-green
	--mdc-theme-primary: white
	box-sizing border-box
	height 32px
	line-height: 35px
	padding: 0 29px
	border-radius 3px
	display inline-block
	user-select: none
	letter-spacing .5px
	font-size 12px
	font-weight bold
	text-transform uppercase
	position relative
	transition .2s
	font-family sans-serif
	border 1px solid var(--thecolor)
	color text-green
	box-shadow 0 4px 0 0 dark-green
	background-color transparent
	&:hover
		background-color var(--thecolor)
		color white
		box-shadow 0 3px 0 0 dark-green
		border 1px solid var(--thecolor)
		
	&--small
		height 22px
		line-height: 22px
		font-size 10px
		padding: 0 15px
		box-shadow 0 2px 0 0 dark-green
		
	&--filled
		background-color var(--thecolor)
		color white !important
		width 100%

		
	&--error
		--thecolor : medium-red
		color text-red
		border-color var(--thecolor)
		box-shadow 0 4px 0 0 dark-red
		&:hover
			background-color var(--thecolor)
			color white
			box-shadow 0 3px 0 0 dark-red
			border 1px solid var(--thecolor)
		
	&--small&--error
		box-shadow 0 2px 0 0 dark-red
		

.mdc-ripple-surface:hover:before
	opacity 0 !important
		
.button.mdc-ripple-upgraded--foreground-activation
	box-shadow none !important
	border-color #6ac2b5
	
.button.button--error.mdc-ripple-upgraded--foreground-activation
	box-shadow none !important
	border-color #ea7155