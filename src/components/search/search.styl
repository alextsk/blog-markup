.search
  &__body
    height 28px
    background-color var(--light-grey)
    display flex
    align-items stretch
    border-radius 4px
    overflow hidden
    padding-left 14px

  &__actual
    background-color transparent
    border none
    width 100%
    height 100%

  &__button
    width 33px
    height 100%
    cursor pointer
    background-color var(--main-color)
  &__icon
    height 14px
    width 14px
    
.search.search--failed 
  .search__body
    background-color var(--main-color)
  .search__actual
    color white