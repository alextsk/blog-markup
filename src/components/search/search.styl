.search
  &__body
    height 1.75rem
    background-color var(--light-grey)
    display flex
    align-items stretch
    border-radius .25rem
    overflow hidden
    padding-left .875rem

  &__actual
    background-color transparent
    border none
    width 100%
    height 100%

  &__button
    width 2.3125rem
    height 100%
    display flex
    justify-content center
    align-items center 
    cursor pointer
    background-color var(--main-color)
  &__icon
    height .875rem
    width .875rem
    
.search.search--failed 
  .search__body
    background-color var(--main-color)
  .search__actual
    color white