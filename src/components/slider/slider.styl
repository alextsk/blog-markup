@require "nouislider/distribute/nouislider.min.css"


  
.slider--color-one
  --slider-color : var(--main-color)
.slider--color-two
  --slider-color : var(--support-color)
.slider
  background-color var(--slider-color)

    
*
  &:active,
  &:hover, 
  &:focus
    outline: 0
    outline-offset: -2
    
      
.noUi-target
  border none
  box-shadow none
  
.noUi-horizontal
  height 4px  
  .noUi-tooltip 
    display: none;
    border none
    outline none
    color white
    bottom: 150%
    background-color var(--slider-color)
    &:after
      background-color transparent  
      content ""
      position absolute
      top 25px
      width: 0px
      height 0px
      border-radius 4px
      border-left 10px solid transparent
      border-right 10px solid transparent
      border-top 10px solid var(--slider-color) 
      
  .noUi-handle
    width 20px
    height 20px
    top -3px
    border-radius 50%
    box-shadow none
    border none
    background-color var(--slider-color)
    &:before,&:after
      display none
     
.slider[data-parts]
  margin-bottom 50px
  
.noUi-marker
  display none
  
.noUi-value
  cursor pointer
  
.noUi-connect, .noUi-origin
  top -5px

.noUi-active .noUi-tooltip 
  display: flex
  justify-content center
  

      
  
