.video
  width 595px
  height 337px
  &__actual 
    width 100%
    height 100%
    
  &__controls
    
    display grid
    grid-template-columns max-content 1fr max-content
    width 100%
    background  linear-gradient(rgba(255,255,255,.0) 0%, rgba(33,33,44,.6), rgba(255,255,255,.0));

    height 48px
    margin-top -52px
    z-index 999
    position relative
    align-items center
  &__progress-bar
    height 5px
    width calc(100% - 22px)
    border-radius 4px
    background-color var(--light-grey)
  &__progress-position
    content ""
    display block
    border-radius 4px
    background-color var(--main-color)
    height 100%
  &__play-pause-button
    
  &__fullscreen
    height 100%
    width 48px
    display flex
    align-items center
    justify-content center
    background-color var(--main-color)
    fill white
    &:hover
      fill var(--support-color)
      
  &__play-pause-button
    background-color transparent