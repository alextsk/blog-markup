.video
  width 595px
  &__actual 
    width 100%
    height 100%
    
  &__controls
    
    display grid
    grid-template-columns max-content 1fr max-content
    width 100%
    background-color  rgba(0,0,0,.4)
    height 48px
    margin-top -48px
    z-index 999
    position relative
    align-items center
  &__progress-bar
    height 4px
    width 100%
    border-radius 4px
    background-color var(--light-grey)
  &__progress-position
    content ""
    display block
    border-radius 4px
    background-color var(--main-color)
    height 100%

    