.map 
  height 272px
  position relative
  
  &__actual
    height 100%
    width 100%
    
  &__bar 
    height 70px
    background-color var(--main-color)
    width 100%
    position absolute 
    bottom 0
    z-index 999
    display grid
    grid-template-columns 1.77fr 3.67fr 1fr
    align-items center

  &__message
    justify-self center
    font-weight 300
    font-size 30px
    color white
  &__controls
    display flex
    justify-self end
    
  &__icon
    width 26px
    height 26px
    cursor pointer
    &:not(:first-child)
      margin 0  26px 0 21px

    &:hover svg g
      stroke var(--support-color)
    &:nth-of-type(2):hover svg g
      fill var(--support-color)
  &__address
    color white
    text-transform uppercase
    font-size 12px
    