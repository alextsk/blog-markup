.location
  height 100%
  position relative
  
  &__actual
    height 100%
    width 100%
    
  &__bar 
    height 70px
    background-color var(--main-color)
    width 100%
    position absolute 
    bottom 0
    z-index 999
    display grid
    grid-template-columns 1.77fr 3.67fr 1fr
    align-items center

  &__message
    justify-self center
    font-weight 300
    font-size 30px
    color white
  &__controls
    display flex
    justify-self end
    
  &__icon
    width 26px
    height 26px
    cursor pointer
    &:nth-child(2)
      margin 0 16px 0 21px
  &__address
    color white
    text-transform uppercase
    font-size 12px
  

.target-icon__group
  stroke #fff
  fill transparent
  &:hover
    stroke var(--support-color)
    
.marker-icon__group
  fill #fff
  &:hover
    fill var(--support-color)