.main-menu
  margin-top 2rem
  width 100%
  &__container
    display grid
    grid-gap 10px
    grid-template-columns repeat(auto-fill, minmax(150px, 1fr))
    @media (min-width 900px)
      display flex
      flex-wrap wrap
      justify-content space-between
      
  &__item 
    display grid
    grid-template-rows 1fr 2px
    justify-content start
    align-items center
    margin-right 20px
    a
      font-size 1.4rem  
      font-weight 400
      text-decoration: none
      color black
      display inline-block
      
      &:after
        content  ""
        display block
        height 1px
        width 100%
        transform scaleX(0)
        place-self: start center;
        background var(--text-dark)
        transition .2s ease-in-out
      &:hover:after
        transform scaleX(1)