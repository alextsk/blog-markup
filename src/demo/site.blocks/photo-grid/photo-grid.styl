.photo-grid
  margin-top 2rem
  display grid
  grid-template-columns 1fr 1fr minmax(300px, 1fr)
  grid-gap 20px
  
  &__list
    display inline-grid
    grid-column span 2
    grid-template-columns repeat(auto-fit, minmax(50px, 1fr))
    grid-auto-rows 50px

  &__item
    display flex
    
    &.active
      border 1px solid yellow
      
  &__thumbnail
      width 100%
      
  &__big-image
    display flex
    justify-content stretch
    position relative
    align-self start
    
  &__controls
    align-self center
    position: absolute;
    width 100%
    display flex
    justify-content space-between
  