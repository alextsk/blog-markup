



.video_container
  display grid
  grid-template-columns 1fr 1fr 1fr
  grid-template-rows 300px
  grid-gap 20px
.glide__arrow
  display inline-block
  position absolute
  top 50%
  transform translateY(-50%)
  &--left
    left -20px
  &--right 
    right -20px
.glide__slide
   border-radius 4px
   overflow hidden
   display grid
   /*no idea why it fixes the cuttin of bottom 5 pixels*/
.slick-slide > div 
  margin-right 10px
  overflow hidden
  border-radius 40px
.note-title
  font-size calc(var(--font-basic)*1.2px)