
*
  margin 0
  padding 0
  box-sizing border-box
h1,h2
  font-weight 300
p
  margin-bottom .6rem
ul
  list-style none
body
  font-family Lato
  min-height 100vh
  display grid
  grid-template-rows: min-content min-content auto auto;
body > * 
  margin 0 auto
  max-width: 1100px
img
  max-width: 100%
  object-fit cover
  
.page-content
    margin-top 2rem
    margin-bottom 2rem
.menu-parent
  width 100%

      
    



  
.footer
  background-color black
  width 100% !important
  max-width 100%
  align-self end

.footer__wrapper
  display grid
  grid-auto-rows minmax(300px, auto)
  grid-template-columns 1fr 1fr
  @media (min-width: $break)
    grid-template-columns 2fr 1fr 1fr
  grid-gap 20px
  color white
  max-width 1100px
  margin 0 auto
  padding 4rem 0 8rem
.footer__map
  grid-column span 2
  @media (min-width: $break)
    grid-column span 1
.footer__input-group
  margin-top 10px
  label
    line-height 133%
.footer__contact-data
  line-height 160%
  font-size 14px
.footer__contact-item
  margin-bottom 2rem
  dt
    font-weight 600
  dd 
    font-size 1rem
