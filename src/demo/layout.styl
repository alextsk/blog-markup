
*
  margin 0
  padding 0
  box-sizing border-box
h1,h2
  font-weight 300
p
  margin-bottom .6rem
ul
  list-style none
body
  font-family Lato
  min-height 100vh
  display grid
  grid-template-rows: min-content min-content auto auto;
body > * 
  margin 0 auto
  max-width: 1100px
img
  max-width: 100%
  object-fit cover
  
.page__content
    margin-top 2rem
    margin-bottom 2rem
.page__menu
  width 100%

      
    



  
.page__footer
  background-color black
  width 100% !important
  max-width 100%
  align-self end

