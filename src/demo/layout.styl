
*
  margin 0
  padding 0
  box-sizing border-box
h1,h2
  font-weight 300
p
  margin-bottom .6rem
ul
  list-style none
body
  font-family Lato
body > * 
  margin 0 auto
  max-width: 1100px
img
  max-height 100%
  max-width: 100%;
  object-fit cover
.page-content
    margin-top 2rem
    margin-bottom 2rem
.menu
  &__container
    display flex
    justify-content space-between
    grid-gap 10px
    grid-template-columns repeat(auto-fill, 1fr)
  &__item 
    display grid
    grid-template-rows 1fr 2px
    align-items center
    a
      font-size 1.4rem  
      font-weight 400
      text-decoration: none
      color black
      
    &:after
      content  ""
      display block
      height 1px
      width 100%
      transform scaleX(0)
      place-self: start center;
      background var(--text-dark)
      transition .2s ease-in-out
    &:hover:after
      transform scaleX(1)
      
    
header 
  display grid
  height 10rem
  align-items center
  grid-template-columns 2fr 1fr
  grid-template-rows 1fr 1fr
.logo
    grid-row span 2
.logo__title
  font-size calc(var(--logo-font-basic) * 2.5px)
  font-weight 300
  white-space nowrap
.phone
  font-size calc(var(--logo-font-basic) * 2px)

.logo__subtitle
  font-size calc(var(--logo-font-basic) * 0.625px)
  text-transform uppercase
  letter-spacing calc(var(--logo-font-basic) * 1.1875px)
  font-weight 600
  white-space nowrap

.time 
  grid-column 2
.back 
  background-image url('images/header-back.jpg')
  background-repeat no-repeat
  background-size cover



  
.footer
  background-color black
  width 100% !important
  max-width 100%

.footer__wrapper
  display grid
  grid-template-columns 2fr 1fr 1fr
  grid-gap 20px
  color white
  max-width 1100px
  margin 0 auto
  padding 4rem 0 8rem
.footer__input-group
  margin-top 10px
  label
    line-height 133%
.footer__contact-data
  line-height 160%
  font-size 14px
.footer__contact-item
  margin-bottom 2rem
  dt
    font-weight 600
  dd 
    font-size 1rem
