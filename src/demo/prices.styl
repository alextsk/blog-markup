
.price-list-page__description 
    margin-top: 1.5rem;
    max-width: 500px;
    font-size: 14px;
    line-height: 150%;
.price-lists-group
  display grid
  grid-template-columns repeat(auto-fit, minmax(400px, 1fr))
  grid-gap 20px
  
.price-list
  margin-top 1.5rem
  &__title
    font-size 1.5rem
    letter-spacing: .5px;
    font-size: 1.5rem;
    color: white;
    background: black;
    padding: 0 1rem;
    display: inline-block;

table
  width 100%
  margin-top: 1.5rem
  
th, td {
  padding: .5rem 0;
  vertical-align baseline
}
tr:hover td{
  color var(--main-color, red)
}
td:last-child
  width 4rem
 
  &:before
    content "за "
    

td:nth-child(2)
  width 5rem
  text-align right 
  white-space nowrap 
  font-weight 600
  &:after
    content " р."